{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "startup",
            "dependsOn": ["node-red", "rasa"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "node-red",
            "type": "shell",
            "command": [ "npm start"],
            "windows": {
                "command": "npm start"
                },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        },
        {
            "label": "rasa",
            "type": "shell",
            "command": [ "source .venv/bin/activate && spacy download en_core_web_md"],
            "windows": {
                "command": "npm start"
                },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
}